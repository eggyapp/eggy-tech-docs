{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all"
    }
  },
  "files": {
    "includes": [
      "**",
      "!dist",
      "!**/dist",
      "!node_modules",
      "!**/node_modules",
      "!.next",
      "!**/.next",
      "!.source",
      "!**/.source"
    ]
  }
}
